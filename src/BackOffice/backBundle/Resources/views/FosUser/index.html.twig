{% extends 'BackOfficebackBundle::Layout.html.twig' %}

{% block body -%}
    <h1>FosUser list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Username</th>
                
                <th>Email</th>
                
                
                <th>Locked</th>
                
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('fosuser_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                
                <td>{{ entity.email }}</td>
               
                
                
              
                <td>{{ entity.locked }}</td>
               
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('fosuser_show', { 'id': entity.id }) }}">Desactiver</a>
                    </li>
                    <li>
                        <a href="{{ path('fosuser_edit', { 'id': entity.id }) }}">Activer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('fosuser_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
